@model Review

@{
    ViewData["Title"] = "Rate Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rate the Review</h1>

<h4>Review</h4>
<hr />
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"> Reviewer </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reviewer)
        </dd>
        <dt class="col-sm-2"> Review </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2"> Book </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2"> Book Rating </dt>
        <dd class="col-sm-2">
            <table class="table table-borderless table-sm text-left">
                <tr>
                    @for (int i = 1; i <= Model.BookRating; i++)
                    {
                        <td><img src="~/lib/star-rating/filledstar.png" alt="(*)" width="20" height="20"></td>
                    }
                    @for (int i = 1; i <= (5 - Model.BookRating); i++)
                    {
                        <td><img src="~/lib/star-rating/emptystar.png" alt="( )" width="20" height="20"></td>
                    }
                </tr>
            </table>
        </dd>
        <dd class="col-sm-8"></dd>
        <dt class="col-sm-2"> Current Review Rating </dt>
        <dd class="col-sm-2">
            <table class="table table-borderless table-sm text-left">
                <tr>
                    @for (int i = 1; i <= Model.ReviewRating; i++)
                    {
                        <td><img src="~/lib/star-rating/filledstar.png" alt="(*)" width="20" height="20"></td>
                    }
                    @for (int i = 1; i <= (5 - Model.ReviewRating); i++)
                    {
                        <td><img src="~/lib/star-rating/emptystar.png" alt="( )" width="20" height="20"></td>
                    }
                </tr>
            </table>
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <div class="form-group">
                <label asp-for="ReviewRating" class="control-label"></label>
                <table class="table table-borderless table-sm text-center">
                    <tr>
                        <td>
                            <label><input class="form-check-input" asp-for="ReviewRating" value="1" type="radio" /></label>
                        </td>
                        <td>
                            <label><input class="form-check-input" asp-for="ReviewRating" value="2" type="radio" /></label>
                        </td>
                        <td>
                            <label><input class="form-check-input" asp-for="ReviewRating" value="3" type="radio" /></label>
                        </td>
                        <td>
                            <label><input class="form-check-input" asp-for="ReviewRating" value="4" type="radio" /></label>
                        </td>
                        <td>
                            <label><input class="form-check-input" asp-for="ReviewRating" value="5" type="radio" /></label>
                        </td>
                    </tr>
                </table>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
