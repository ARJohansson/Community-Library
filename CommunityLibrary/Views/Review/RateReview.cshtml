@model Review

@{
    ViewData["Title"] = "Rate Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rate the Review</h1>

<h4>Review</h4>
<hr />
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"> Reviewer </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reviewer)
        </dd>
        <dt class="col-sm-2"> Review </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2"> Book </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2"> Book Rating </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookRating)
        </dd>
        <dt class="col-sm-2"> Current Review Rating </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewRating)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <div class="form-group">
                <label asp-for="ReviewRating" class="control-label"></label>
                <input asp-for="ReviewRating" class="form-control" />
                <span asp-validation-for="ReviewRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
