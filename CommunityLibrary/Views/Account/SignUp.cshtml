@model CreateUserViewModel;

@{
    ViewData["Title"] = "Sign Up";
}

<body>

    <h2>Create a new user here and get started with your book sharing!</h2>

    <form method="post">
        <div asp-validation-summary="All" style="background-color: red"></div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" /><br />
        <span asp-validation-for="Email"></span> <br />

        <label asp-for="Name">Name</label>
        <input asp-for="Name" /><br />
        <span asp-validation-for="Name"></span> <br />

        <label asp-for="UserName">UserName</label>
        <input asp-for="UserName" /><br />
        <span asp-validation-for="UserName"></span> <br />

        <label asp-for="Password">Password</label>
        <input asp-for="Password" /><br />

        <input type="submit" value="Enter" />
    </form>
    <a href="Character/Index"></a>
</body>